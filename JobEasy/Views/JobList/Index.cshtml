@model IEnumerable<JobList>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Job List</h2>
            <br />
            <br />

        </div>
        <div class="col-6 text-end">
            <a asp-controller="JobList" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> &nbsp; Create New JobList
            </a>
        </div>
    </div>

</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Job Title
            </th>
            <th>
                Job Description
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ob in Model)
        {
            <tr>
                <td width="20%">
                    @ob.JobTitle
                </td>
                <td width="50%">
                    @ob.JobDescription
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="JobList" asp-action="Detail" asp-route-id="@ob.Id" class="btn btn-primary mx-2">Detail</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="JobList" asp-action="Edit" asp-route-id="@ob.Id" class="btn btn-primary mx-2">Edit</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="JobList" asp-action="Delete" asp-route-id="@ob.Id" class="btn btn-primary mx-2">Delete</a>
                    </div>
                </td>
            </tr>

        }
    </tbody>




</table>